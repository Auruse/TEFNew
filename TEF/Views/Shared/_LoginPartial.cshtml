@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <div class="nav navbar-nav navbar-right">
        <div class="nav navbar-text">
            <span style="font-size: 1.3em; text-decoration:none; color:dodgerblue;">
                <i class="fas fa-user-alt">
                    @Html.ActionLink(User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { style = "text-decoration:none;", title = "Manage" })
                </i>
            </span>
        </div>
        <div class="btn btn-outline-light">
            <a href="javascript:document.getElementById('logoutForm').submit()" style="text-decoration:none;">
                <span style="font-size: 1.5em; text-decoration:none; color:grey;">
                    <i class="fas fa-sign-out-alt"></i>
                </span>
            </a>
        </div>
    </div>
}
}
else
{
<div class="nav navbar-nav navbar-right">
    <div class="btn btn-outline-primary my-2 my-sm-0">
        @Html.ActionLink("Войти", "Login", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
    </div>

    <div class="btn btn-outline-light">
        @Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
    </div>
    @*<li>@Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Выполнить вход", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>*@
</div>
}
