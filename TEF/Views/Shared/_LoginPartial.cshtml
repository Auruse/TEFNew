@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <div class="nav navbar-nav navbar-right">
         <div class="nav navbar-text">
        @Html.ActionLink("Здравствуйте, " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { style = "text-decoration:none;" , title = "Manage" })
        </div>
        <div class="btn btn-outline-light">
            <a href="javascript:document.getElementById('logoutForm').submit()" style = "text-decoration:none;">Выйти</a>
        </div>
    </div>
}
}
else
{
<div class="nav navbar-nav navbar-right">
    <div class="btn btn-outline-primary my-2 my-sm-0">
        @Html.ActionLink("Войти", "Login", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
    </div>

    <div class="btn btn-outline-light">
        @Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
    </div>
